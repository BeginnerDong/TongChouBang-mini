/* pages/feaPlace/feaPlace.wxss */
/*********搜索框***********/
.center-container{
  font-family:PingFang-SC-Medium;
  font-size:12px;
  width:86%;
  margin: 0 auto;
  height:30px;
  display: flex;
  border-radius:15px;
  position: absolute;
  top:12%;
}
.search-container input{
 border:0.5px solid #D3D3D3;
	width:100%;
	height: 100%;
	border-radius:15px 0 0 15px;
	background-color: #fff;
}
.search-img{
border:0.5px solid #D3D3D3;
height:30px;
border-radius:0 15px 15px 0;
background-color:#FF556F; 
width: 16%;
display: flex;
align-items: center;
justify-content: center;
}
.search-img image{
  width:18px;
  height:18px;

}
.nav-img{
  width:100%;
  padding:0px 8% 10px 8%;
  text-align:center;
}
.nav-img image{
  width:84%;
  height:180px;
}
/*********搜索框***********/
.center-banner-container{
  width:100%;
  display:flex;
  flex-direction:row;
  color:#666666;
  font-size:13px;
  padding:15px 6% 0px 6%; 
  border-bottom:1px solid lightgrey;
  background-color:#ffffff;
}
.center-banner-container .active-item{
  margin-right:35px;
  height:30px;
  color:#FF556F;
  border-bottom:2px solid #FF556F;
}
.center-banner-container .item{
  margin-right:35px;
  height:30px;
}
.tip-container{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  padding:0px 6% 15px 9%;
  margin-top:7px;
  background-color:#ffffff;
}
.tip-container .item{
  margin-top:10px;
}
.tip-container text{
  font-family:PingFang-sc-Medium;
  border:1px solid lightgrey;
  padding:2px 8px;
  border-radius:5px;
  margin-right:15px;
  font-size:12px;
  color:#222222;
}
/****************图片******************/
.img-container{
  display:flex;
  white-space:nowrap;
  padding:0px 4%;
  margin-top:15px;
}
.img-container image{
  width:103px;
  height:81px;
  margin-right:10px;
  display:inline-block;
}
/****************图片******************/

/****************预订价格******************/
.price-container{
  font-family:PingFang-SC-Medium;
  width:100%;
  padding:0 4% 40px 4%;
}
.price-little-container{
  width:84%;
  margin-top:15px;
  background-color:#ffffff;
  padding:15px 15px;
}
.price-img-container{
  display:flex;
  flex-direction:row;
}
.price-img-container image{
  width:111px;
  height:82px;
  margin-right:10px;
}
.text-cotainer .title{
  font-size:13px;
  color:#212121;
}
.text-cotainer .content{
  font-size:12px;
  color:#666666;
  line-height:18px;
  margin-top:8px;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
}
.tip2-container{
  display:flex;
  white-space:nowrap;
  margin-top:7px;
}

.now-price{
  font-size:10px;
  color:#FF667D;
  margin-right:10px;
  display:inline-block;
}
.init-price{
  font-size:9px;
  color:#FFB1BB;
  margin-right:10px;
  text-decoration:line-through;
  display:inline-block;
}
.discount{
  font-size:10px;
  color:#FF667D;
  display:inline-block;
}
.button-container{
  display:flex;
  justify-content:space-between;
}

button{
  width:81px;
  height:26px;
  font-size:11px;
  color:#ffffff;
  background-color:#FF556F;
}
/****************预订价格******************/

/****************活动需求******************/
.need{
  position:absolute;
  width:60px;
  height:60px;
  background-color:#FF556F;
  color:#ffffff;
  border-radius:30px;
  font-size:12px;
  align-items: center;
  text-align:center;
  top:56%;
  left:80%;
}
.need text{
  position:absolute;
  top:38%;
  left:12%;
  text-align:center;
}
/****************活动需求******************/