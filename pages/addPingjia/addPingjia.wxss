/******************星级评价*************/
.add-area{
background-color:#ffffff;
margin-top:14px;
}
.star-container{
  width:100%;
  height:50px;
  background-color:#ffffff;
  padding:10px 6%;
  font-size:14px;
  color:#000000;
}
.star-text{
  display:flex;
  flex-direction:row;
}
.star{
  display:flex;
  flex-direction:row;
  margin-left:45px;
}
.star-container image{
  width:14px;
  height:14px;
  margin-right:6px;
}
.add{
  margin-top:8px;
}

