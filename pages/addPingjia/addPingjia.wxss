.addPingjia-container{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
  background-color:#F4F4F4;
  padding-top:1px;
}

/******************待添加评价**************/
.pingjia-container{
  font-family:PingFang-SC-Medium;
  padding:0px 0% 0px 6%;
  background-color:#F4F4F4;
  margin:0px 0px;
}
.pingjia-container-text{
  box-shadow:0.5px 0.5px 4px lightgray;
  width:89%;
  height:125px;
  padding:10px 0px 0px 15px;
  margin-top:15px;
  background-color:#ffffff;
}
.img-text-container{
  display:flex;
  flex-direction:row;
}
.img-text-container image{
  width:94px;
  height:77px;
  margin-right:10px;
}
.text-container  .title{
  font-size:13px;
  color:#000000;
  margin-bottom:10px;
}
.text-container .neirong{
   font-size:12px;
   color:#9E9E9E;
}
.text-container .price{
  color:#FE546F;
  font-size:12px;
  margin-top:16px;
}

.date-container{
  display:flex;
  justify-content:space-between;
}
.date-container .date{
  color:#9E9E9E;
  font-size:12px;
  margin-bottom:15px;
}
.date-container .tips{
  color:#FE546F;
  font-size:12px;
  padding-right:15px;
}
