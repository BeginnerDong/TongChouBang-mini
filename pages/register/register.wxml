<!--pages/login/login.wxml-->
<view class="login-container">
   <view><image src="/images/login-icon1.png"/></view>
   <view class="text-container">
      <view class="phone-container">
         <view><image src="/images/registered-icon1.png"/></view>
         <view><input type="text" placeholder="输入姓名"/></view>
      </view>
      <view class="password-container">
         <view><image src="/images/registered-icon2.png" id="img2"/></view>
         <view><input type="text" placeholder="输入手机号码"/></view>
      </view>
      <view class="password-container">
         <view ><image src="/images/registered-icon3.png" id="img3"/></view>
         <view><input type="text" placeholder="输入地区" id="img4"/></view>
      </view>
      <view class="password-container">
         <view ><image src="/images/registered-icon4.png" id="img5"/></view>
         <view><input type="text" placeholder="输入账号"/></view>
      </view>
      <view class="password-container"> 
         <view><image src="/images/registered-icon5.png"/></view>
         <view><input type="text" placeholder="输入登录密码"/></view>
      </view>
      <view class="button" bindtap="login"><button>注册</button></view>
   </view> 
</view>

