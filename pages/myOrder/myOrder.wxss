/* pages/addPingjia/addPingjia.wxss */
.addPingjia-container{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
}
/*****************导航栏***************/
.banner-container{
  width:100%;
  height:30px;
  display:flex;
  white-space:nowrap;
  text-align:center;
  padding:16px  6% 0px 6% ;
  box-shadow:0.5px 0.5px 0.05px lightgray; 
}
.banner-container .active-item{
  font-family:PingFang-SC-Bold;
  font-size:15px;
  margin-right:20px;
  color:#FE546F;
  padding-bottom:15px;
  font-weight: bold;
  border-bottom:2px solid #FE546F;
  width:15%;
  display:inline-block;
}
.banner-container .item{
  font-family:PingFang-SC-Medium;
  font-size:13px;
  padding-bottom:15px;
  margin-right:20px;
  width:15%;
  display:inline-block;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/******************导航栏**************/

