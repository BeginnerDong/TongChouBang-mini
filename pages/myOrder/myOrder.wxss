.pingjia-container{
  font-family:PingFang-SC-Medium;
  padding:0px 0% 0px 6%;
}
.pingjia-container-text{
  box-shadow:0.5px 0.5px 4px lightgray;
  width:89%;
  height:165px;
  padding:15px 0px 0px 15px;
  margin-top:15px;
}
.img-text-container{
  display:flex;
  flex-direction:row;
}
.img-text-container image{
  width:94px;
  height:77px;
  margin-right:10px;
}
.text-container  .title{
  font-size:13px;
  color:#000000;
  margin-bottom:10px;
}
.text-container .neirong{
   font-size:12px;
   color:#9E9E9E;
}
.text-container .price{
  color:#FE546F;
  font-size:12px;
  margin-top:16px;
}
.button{
  display:flex;
  justify-content:space-between;
  padding-right:15px;
}
button{
  font-family:PingFang-SC-Regular;
  width:65px;
  height:25px;
  color:#9E9E9E;
  font-size:11px;
  text-align:center;
  padding-bottom:15px;
}
.date-container{
  display:flex;
  justify-content:space-between;
}
.date-container .date{
  color:#9E9E9E;
  font-size:12px;
  margin-bottom:15px;
}
.date-container .tips{
  color:#FE546F;
  font-size:12px;
  padding-right:15px;
}
