/* pages/myCenter/myCenter.wxss */
.myCenter-container{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
  position:relative;
  font-family:PingFang-SC-Medium;
}
.nickname-container{
  width:100%;
  height:150px;
  background-color:#FE546F;
  padding:0px 6%;
  display:flex;
  flex-direction:row;
}
.nickname-container image{
  width:80px;
  height:80px;
  margin-right:20px;
  margin-top:20px;
}
.nickname-container .nickname{
  color:#ffffff;
  font-size:14px;
  margin-top:45px;
  letter-spacing:2px;
}
.big-container{
  width:100%;
  padding:0 6%;
}
canvas{
  width:100%;
  padding:0px 6%;
}
.myOrders{
 width:88%;
 height:134px;
 margin-top:-30px;
 box-shadow:0.5px 5px 10px #9E9E9E;
 border-radius:8px;
 padding:20px 0% 20px 0%;
 background-color:#ffffff;
}
.banner{
  display:flex;
  justify-content:space-between;
  margin:0px 10px;
  padding-bottom:10px;
  font-size:14px;
  color:#4A4A4A;
  border-bottom:1px solid lightgrey;
}
.banner image{
  width:8px;
  height:8px;
}
.state-container{
  display:flex;
  flex-direction:row;
  padding:20px 8px 20px 22px;
}
.item{
  text-align:center;
  margin-right:15px;
}
.item text{
  font-size:14px;
  color:#4A4A4A;
  margin:15px 0px 0px 0px;
}
.state-container image{
  width:35px;
  height:35px;
}
