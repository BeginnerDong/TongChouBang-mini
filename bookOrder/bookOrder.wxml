<!--pages/bookOrder/bookOrder.wxml-->
<view class="bookOrder-container">
  
  <view class="info-containner">
    <!-- 预约信息-->
      <view class="book-info">
         <view class="title"><text>预约信息</text></view>
         <view class="content">
            <view class="tip"><text>*</text></view>
            <view class="little-title"><text>活动日期</text></view>
            <view><input type="text" placeholder="2019-05-16" placeholder-style="color:#272727;font-size:10px;"/></view>
         </view>

         <view class="content">
            <view class="tip"><text>*</text></view>
            <view class="little-title"><text>使用时段</text></view>
            <view><input type="text" style="border:none;font-size:10px" placeholder="0:00-24:00" placeholder-type="color:#272727;font-size:10px;"/></view>
         </view>
         
         <view class="content">
            <view class="tip"><text>*</text></view>
            <view class="little-title"><text>购买数量</text></view>
            <view class="num-container">
               <view class="icon">-</view>
               <view><input type="text" placeholder="40" placeholder-type="color:#272727;font-weight:bold;"/></view>
               <view class="icon2">+</view>
            </view>
            <view class="num-info"><text>最小购买数量为40,最大购买数量为150</text></view>
         </view>

         <view class="content">
            <view class="tip"><text>*</text></view>
            <view class="little-title"><text>活动规模</text></view>
            <view><input type="text" placeholder="请正确填写活动规模" style="font-size:10px;"/></view>
         </view>

          <view class="content">
            <view><text></text></view>
            <view class="little-title"><text style="margin-left:10px;">备注信息</text></view>
            <view><textarea type="text" placeholder="请简单描述您需要的设施与服务,如投影仪、白板等（非必填）" placeholder-style="font-size:10px;color:#999999;" auto-focus/></view>
         </view> 
      
      </view>
    <!-- 预约信息-->

    <!-- 联系信息-->
        <view class="contact-info">
            <view class="title">联系信息</view>
            <view class="content">
              <view class="tip"><text>*</text></view>
              <view class="little-title"><text>联系人姓名</text></view>
              <view><input type="text" placeholder="请输入联系人姓名"/></view>
            </view>

            <view class="content">
              <view class="tip"><text>*</text></view>
              <view class="little-title" style="margin-right:20px;"><text>联系电话</text></view>
              <view><input type="text" placeholder="请输入联系人电话"/></view>
            </view>

            <view class="content">
              <view class="tip"><text>*</text></view>
              <view class="little-title" style="margin-right:20px;"><text>联系邮箱</text></view>
              <view><input type="text" placeholder="请输入联系人邮箱(非必填)"/></view>
            </view>
        </view>    
    <!-- 联系信息-->
  </view>
    <!--按钮-->
      <view class="button" data-num="0" class="item {{num==0?'active-item':''}}"  bindtap="submit"><button>提交</button></view>
    <!--按钮-->
    
    <!--弹框-->
   <view class="model-container">
   <view class="model">
     <view class="close">*</view>
       <view class="con">提交预约成功,负责人会在八小时之内联系你,请注意接听电话.</view>
       <view class=".text"><text>咨询热线:00000000</text></view>
    </view>
     </view>
    <!--弹框-->

</view>
