          <view><text>联系电话：</text></view>
          <view><input type="text" placeholder="请输入您的联系电话"  placeholder-style="color:#545454;font-size:12px;"/></view>
          <view class="icon"><image src="/images/home-icon2.png"/></view>     
      </view>

      <view class="container">
          <view style="width:50px;"><text>验证码：</text></view>
          <view><input type="text" style="width:180px;"/></view>
          <view class="icon" style="width:90px;">获取验证码</view>     
      </view>

      <view class="container">
          <view><text>备注：</text></view>
          <view><input type="text"/></view>
          <view class="icon"></view>     
      </view>
      
    </view>

