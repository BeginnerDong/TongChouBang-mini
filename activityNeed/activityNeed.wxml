   <view class="big-container">
      
      <view class="container">
          <view><text>活动类型：</text></view>
          <view><input type="text" placeholder="不限"  placeholder-style="color:#212121;font-size:12px;" auto-focus/></view>
          <view class="icon"><image src="/images/home-icon2.png"/></view>     
      </view>

      <view class="container">
          <view><text>活动时间：</text></view>
          <view><input type="text" placeholder="不限"  placeholder-style="color:#212121;font-size:12px;"/></view>
          <view class="icon"><image src="/images/home-icon2.png"/></view>     
      </view>


      <view class="container">
          <view><text>预算：</text></view>
