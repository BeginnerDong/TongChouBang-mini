/* pages/myCenter/myCenter.wxss */
.myCenter-container{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
  position:relative;
  font-family:PingFang-SC-Medium;
}
.nickname-container{
  width:100%;
  height:150px;
  background-color:#FE546F;
  padding:0px 6%;
  display:flex;
  flex-direction:row;
}
.nickname-container image{
  width:80px;
  height:80px;
  margin-right:20px;
  margin-top:20px;
}
.nickname-container .nickname{
  color:#ffffff;
  font-size:14px;
  margin-top:45px;
  letter-spacing:2px;
}
.big-container{
  width:100%;
  padding:0 6%;
}

.myOrders{
 width:88%;
 height:110px;
 margin-top:-30px;
 box-shadow:1px 1px 5px #9E9E9E;
 border-radius:8px;
 padding:20px 0% 20px 0%;
 background-color:#ffffff;
}
 .chakan text{
  margin-right:8px;
  color:#999999;
  font-size:11px;
} 
.banner{
  display:flex;
  justify-content:space-between;
  margin:0px 10px;
  padding-bottom:10px;
  font-size:14px;
  border-bottom:1px solid #F1F1F1;
}
.banner .title{
  color:#4A4A4A;
  font-size:14px;
}
.banner image{
  width:7px;
  height:7px;
}
.state-container{
  display:flex;
  flex-direction:row;
  padding:20px 5px 20px 26px;
}
.item{
  text-align:center;
  margin-right:20px;
}
.item text{
  font-size:12px;
  color:#4A4A4A;
  margin:15px 0px 0px 0px;
}
.state-container image{
  width:30px;
  height:30px;
}

.enter-container{
  width:79%;
  box-shadow:1px 1px 5px #9E9E9E;
  margin:25px 0px 220px 0px;
  border-radius:8px;
  padding:9px 20px 0px 15px;
}
.apply-enter{
  display:flex;
  justify-content:space-between;
  border-bottom:1px solid #F1F1F1;
  padding-bottom:8px;
  margin-top:8px;
}
.apply-text{
 display:flex;
 flex-direction:row;
 font-size:14px;
 color:#212121;
}
.enter-img{
  width:18px;
  height:18px;
  margin-right:8px;
}
.home-img{
  width:8px;
  height:8px;
}

.circel-nav{
	width: 25%;
	text-align: center;
}
.circel-nav image{
	width: 90rpx;
	height: 90rpx;
	margin: 50rpx 0rpx 30rpx;
}