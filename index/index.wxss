/**index.wxss**/
/*********导航栏***********/
 .container{
  width:100%;
  height:100%;
  padding:0px;
  margin:0px;
}
.banner-container{
  font-family:PingFang-SC-Bold; 
  width:100%;
  padding-top:15px;
  margin:0px 8% 15px 9%;
  display:flex;
  white-space:nowrap;
  text-align:center;
  border-bottom:0.5px solid #D3D3D3;
}
.banner-container .active-item{
  font-size:15px;
  margin-right:20px;
  color:#FE546F;
  width:15%;
  display:inline-block;
  padding-bottom:15px;
  font-weight: bold;
  border-bottom:2px solid #FE546F;
}
.banner-container .item{
  font-size:13px;
  width:15%;
  display:inline-block;
  padding-bottom:15px;
  margin-right:20px;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/*********导航栏***********/

/*********搜索框***********/
.search-container{
  font-family:PingFang-SC-Medium;
  font-size:12px;
  width:84%;
  margin: 0 auto;
  height:30px;
  display: flex;
  border-radius:15px;
  position: absolute;
  top:12%;
}
.search-container input{
 border:0.5px solid #D3D3D3;
	width:100%;
	height: 100%;
	border-radius:15px 0 0 15px;
	background-color: #fff;
}
.search-img{
border:0.5px solid #D3D3D3;
height:30px;
border-radius:0 15px 15px 0;
background-color:#FF556F; 
width: 15%;
display: flex;
align-items: center;
justify-content: center;
}
.search-container image{
  width:18px;
  height:18px;

}
.nav-img{
  width:100%;
  padding:0px 8% 10px 8%;
  text-align:center;
}
.nav-img image{
  width:84%;
  height:180px;
}
/*********搜索框***********/

/*********各种场地***********/
.content{
  width:100%;
  background-color:#F5F5F5;
  /* padding-top:20px; */
  margin-bottom:20px;
}
/********年会场定地******/
.nianhui{
  width:100%;
  display:flex;
  flex-direction:row; 
  background-color:white;
  margin-top:5px;
  padding-bottom:20px;
}
.nianhui .bg{
  width:6%;
}
.nianhui .center{
  font-size:PingFang-SC-Bold;
  width:88%;
}

.nianhui .center-content{
 display:flex;
 flex-direction:row;
 flex-wrap:wrap;
}
.nianhui .title-container{
  margin:20px 0px 0px 0px;
  display:flex;
  justify-content:space-between; 
}
.nianhui .item{
 width:48%;
 height:20px;
 font-size:15px;
 color:#212121;
 font-weight:bold;
}
.nianhui .more{
 width:40%;
 height:20px;
 text-align:right; 
 font-size:12px;
 color:#C1C1C1;
}
.center-little-container{
  width:47%;
  margin:0px 1.5%;
}

.nianhui image{
  width:100%;
  height:134px;
  margin-top:15px;
}
.img-text{
 padding:8px;
 margin-top:-8px;
 border:0.5px solid #F1F1F1;
 
}
.img-text .title{
 display:flex;
 white-space:nowrap;
 
}
.img-text .title:first-child{
  font-size:13px;
  color:#212121;
}
.img-text .price{
  font-size:11px;
  color:#000000;
}
.neirong{
  font-size:11px;
  color:#C8C8C8;
  margin-top:5px;
}
span{
  margin:0px 8px;
  font-size:13px;
  color:#FE546F;
}

/********年会场定地******/

