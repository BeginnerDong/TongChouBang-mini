/**index.wxss**/

/*********导航栏***********/
.container{
  width:100%;
  height:100%;
  padding:0px;
  margin:0px;
}
.banner-container{
  width:100%;
  padding:15px 0px 15px 0px;
  margin-bottom:15px;
  display:flex;
  flex-direction:row;
  text-align:center;
  border-bottom:1px solid lightgrey;
  font-family:PingFang-SC-Bold; 
}
.banner-container .item{
  width:30%;
  font-size:15px;
  color:FEFEFE;
}
/*********导航栏***********/

/*********搜索框***********/
.center-container{
   width:100%;
   margin-bottom:15px;  
}
input{
  width:84%;
  height:28px;
  margin-left:6%;
  padding-left:10px;
  border:1px solid lightgrey;
  border-radius:20px;
  color:#999999;
  font-size:12px;
}
.center-container  image{
  width:88%;
  height:160px;
  margin-left:6%;
}
/*********搜索框***********/



/*********各种场地***********/
.content{
  width:100%;
  background-color:#F5F5F5;
  /* padding-top:20px; */
  margin-bottom:20px;
}
/********年会场定地******/
.nianhui{
  width:100%;
  display:flex;
  flex-direction:row; 
  background-color:white;
  margin-top:5px;
  padding-bottom:20px;
}
.nianhui .bg{
  width:6%;
}
.nianhui .center{
  font-size:PingFang-SC-Bold;
  width:88%;
}

.nianhui .center-content{
 display:flex;
 flex-direction:row;
 flex-wrap:wrap;
}
.nianhui .title-container{
  margin:20px 0px 0px 0px;
  display:flex;
  justify-content:space-between; 
}
.nianhui .item{
 width:48%;
 height:20px;
 font-size:15px;
 color:#212121;
 font-weight:bold;
}
.nianhui .more{
 width:40%;
 height:20px;
 text-align:right; 
 font-size:12px;
 color:#C1C1C1;
}
.center-little-container{
  width:47%;
  margin:0px 1.5%;
}

.nianhui image{
  width:100%;
  height:134px;
  margin-top:15px;
}
.img-text{
 padding:8px;
 margin-top:-8px;
 border:0.5px solid #F1F1F1;
 
}
.img-text .title{
 display:flex;
 justify-content:space-between;
}
.img-text .title:first-child{
  font-size:13px;
  color:#212121;
}
.img-text .price{
  font-size:11px;
  color:#000000;
}
.neirong{
  font-size:11px;
  color:#C8C8C8;
  margin-top:5px;
}
span{
  margin:0px 8px;
  font-size:13px;
  color:#FE546F;
}

/********年会场定地******/

