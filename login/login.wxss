/* pages/login/login.wxss */
.login-container{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
}
.login-container image{
  width:100%;
}
.phone-container{
  width:100%;
  display:flex;
  flex-direction:row;
}
.phone-container image{
  width:20px;
  height:30px;
  margin-right:15px;
  margin-left:50px;
}
 input{
  width:220px;
  border-bottom:0.5px solid #F1F1F1;
  font-family:PingFang-SC-Medium;
  font-size:13px;
  color:#999999;
  padding:0px 0px 15px 0px;
}
.password-container{
  width:100%;
  display:flex;
  flex-direction:row;
  margin-top:25px;
}
.password-container image{
  width:20px;
  height:25px;
  margin-right:15px;
  margin-left:50px;
}
.foot-container{
  display:flex;
  flex-direction:row;
  color:grey;
  font-size:15px;
  margin-top:100px;
  padding-left:40%;
}
button{
  font-family:PingFang-SC-Medium;
  margin-top:50px;
  width:270px;
  height:40px;
  background-color:#FF556f;
  text-align:center;
  color:#ffffff;
  font-size:15px;
}
.register{
  margin-right:5px;
}
.login{
  margin-left:5px;
}
.mianze-container{
  display:flex;
  flex-direction:row;
}
.mianze-container .tips{
  width:100px;
  height:50px;
}
.mianze-container .icon{
  width:50px;
  height:10px;
}
