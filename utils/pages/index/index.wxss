/*********导航栏***********/
.container{
  width:100%;
  height:100%;
  padding:0px;
  margin:0px;
}
.banner-container{
  width:100%;
  padding:15px 0px 15px 0px;
  margin-bottom:15px;
  display:flex;
  flex-direction:row;
  text-align:center;
  border-bottom:1px solid GREY;
  font-family:PingFang-SC-Bold; 
}
.banner-container .item{
  width:30%;
  font-size:15px;
  color:FEFEFE;
}
/*********导航栏***********/

/*********搜索框***********/
.center-container{
   margin-bottom:15px;  
}

input{
  width:96%;
  height:30px;
  padding-left:10px;
  border:1px solid grey;
  border-radius:20px;
  color:#999999;
  font-size:12px;
}
::-webkit-input-placeholder{    color:#909;
}

:-moz-placeholder { 
   color:#909;
   font-size:12px;
  }
/*********搜索框***********/



/*********各种场地***********/
.content{
  width:100%;
  background-color:#F5F5F5;
  /* padding-top:20px; */
  margin-bottom:20px;
}
/********年会场定地******/
.nianhui{
  width:100%;
  display:flex;
  flex-direction:row; 
  background-color:white;
  margin-top:20px;
  padding-bottom:20px;
}
.nianhui .bg{
  width:8%;
}
.nianhui .center{
  font-size:PingFang-SC-Bold;
  width:84%;
}

.nianhui .center-content{
  display:flex;
  justify-content:space-between;
}
.nianhui .title-container{
  margin:20px 0px 0px 0px;
  display:flex;
  justify-content:space-between; 
}
.nianhui .item{
 width:40%;
 height:20px;
 font-size:15px;
 color:#212121;
}
.nianhui .more{
 width:40%;
 height:20px;
 text-align:right; 
 font-size:12px;
 color:#C1C1C1;
}
.center-little-container{
  width:48%;
}

.nianhui image{
  width:100%;
  height:134px;
  margin-top:15px;
}
.img-text .title{
  display:flex;
 justify-content:space-between;
}
.img-text .title:first-child{
  font-size:13px;
  color:#212121;
}
.img-text .price{
  font-size:11px;
  color:#000000;
}
.neirong{
  font-size:11px;
  color:#C8C8C8;
  margin-top:5px;
}
span{
  margin:0px 8px;
  font-size:13px;
  color:#FE546F;
}

