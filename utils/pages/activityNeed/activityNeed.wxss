/* pages/activityNeed/activityNeed.wxss */
.activityNeed-container{
  width:100%;
  height:100%;
  margin:0;
  font-family:PingFang-SC-Medium;
}
.big-container{
  width:100%;
  padding:0 6%;
}
.container{
  display:flex;
  flex-direction:row;
  padding:15px 0px;
  width:88%;
  border-bottom:1px solid lightgray;
}
.container text{
  font-size:12px;
  color:#545454;
}
.icon{
  font-size:12px;
  color:#FE546F;
  letter-spacing:2px;
}
.footer-text{
  width:88%;
  font-size:12px;
  color:#999999;
  margin-top:15px;
  padding:0 8%;
  line-height:20px;
}
image{
  width:7px;
  height:7px;
}
.tip{
  font-family:PingFang-SC-Bold;
  font-size:13px;
  color:#FE546F;
}
.phone{
  font-family:PingFang-SC-Bold;
  text-align:center;
  color:#FE546F;
  font-size:12px;
  margin-top:15px;
}
.button{
  text-align:center;
  margin:80px 0px 40px 0px;
}
button{
  width:280px;
  height:35px;
  background-color:#FE546F;
  color:#ffffff;
  font-size:12px;
}