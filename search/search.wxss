/* pages/search/search.wxss */
.center-container{
  width:100%;
  height:100%;
  background-color:#F5F5F5;
  position: relative;
}
/****************预订价格******************/
.price-container{
  font-family:PingFang-SC-Medium;
  width:100%;
  padding:0 4% 40px 4%;
}
.price-little-container{
  width:84%;
  margin-top:15px;
  background-color:#ffffff;
  padding:15px 15px;
}
.price-img-container{
  display:flex;
  flex-direction:row;
}
.price-img-container image{
  width:111px;
  height:82px;
  margin-right:10px;
}
.text-cotainer .title{
  font-size:13px;
  color:#212121;
}
.text-cotainer .content{
  font-size:12px;
  color:#666666;
  line-height:18px;
  margin-top:8px;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
}
.tip-container{
  display:flex;
  flex-direction:row;
  margin-top:7px;
}

.now-price{
  font-size:10px;
  color:#FF667D;
  margin-right:10px;
}
.init-price{
  font-size:9px;
  color:#FFB1BB;
  margin-right:10px;
  text-decoration:line-through;
}
.discount{
  font-size:10px;
  color:#FF667D;
}
.button-container{
  display:flex;
  justify-content:space-between;
}

button{
  width:81px;
  height:26px;
  font-size:11px;
  color:#ffffff;
  background-color:#FF556F;
}
/****************预订价格******************/

/****************活动需求******************/
.need{
  position:absolute;
  width:60px;
  height:60px;
  background-color:#FF556F;
  color:#ffffff;
  border-radius:30px;
  font-size:12px;
  align-items: center;
  text-align:center;
  top:50%;
  left:80%;
}
.need text{
  position:absolute;
  top:38%;
  left:12%;
  text-align:center;
}
/****************活动需求******************/