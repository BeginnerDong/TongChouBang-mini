/* pages/case/case.wxss */
/*********搜索框***********/
.case-container{
  padding:0px;
  margin:0px;
}
.search-container{
  font-family:PingFang-SC-Medium;
  font-size:12px;
  width:100%;
  height:30px;
  padding:15px 6% 0px 6%;
}
.search-container input{
  border:0.5px solid #D3D3D3;
  border-radius:15px;
  width:88%;
  padding-left:10px;
}
/*********搜索框***********/

/*********导航栏***********/
.banner-container{
  font-family:PingFang-SC-Bold; 
  width:200%;
  padding:15px 6% 0px 6%;
  margin-bottom:15px;
  display:flex;
  flex-direction:row;
  border-bottom:0.5px solid #D3D3D3;
}
.banner-container .active-item{
  font-size:15px;
  margin-right:15px;
  color:#FE546F;
  padding-bottom:15px;
  font-weight: bold;
  border-bottom:2px solid#FE546F;
}
.banner-container .item{
  font-size:13px;
  color:FEFEFE;
  padding-bottom:15px;
  margin-right:15px;
}
/*********导航栏***********/

/*********精选案例***********/
.jingxuan-case{
  width:100%;
  display:flex;
  flex-direction:row;
  padding:0 8%;
}

.case-center{
  /* background-color:yellowgreen;      */
  width:84%;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
 .case{
  width:140px;
  margin-bottom:25px;
}
.case image{
  width:140px;
  height:116px;
}
 .case .title{
  color:#000000;
  font-size:12px;
  margin-top:13px;
  width:140px;
  line-height:20px;
}  
/*********精选案例***********/